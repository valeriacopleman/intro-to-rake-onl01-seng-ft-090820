desc 'outputs hello to the terminal'
task :hello do
  puts "hello from Rake!"
end

namespace :greeting do
desc 'outputs hello to the terminal'
  task :hello do
    puts "hello from Rake!"
  end
 
  desc 'outputs hola to the terminal'
  task :hola do
    puts "hola de Rake!"
  end
end

rake greeting:hello
hello from Rake!
 
rake greeting:hola
hola de Rake!